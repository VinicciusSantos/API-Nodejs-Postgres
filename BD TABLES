CREATE TABLE projetos(
    "id" SERIALNOT NULL,
    "nome" VARCHAR NOT NULL,
    PRIMARY KEY("ID")  
);

CREATE TABLE equipes(
    "id_equipe" SERIAL NOT NULL,
    "nome" VARCHAR NOT NULL,
    "projetos" VARCHAR NOT NULL,
    "id_projetos" INT NOT NULL,
    PRIMARY KEY("id_equipe"), 
    FOREIGN KEY ("id_projetos") REFERENCES projetos("id_projetos")
);

CREATE TABLE tarefas(
    "id_tarefas" SERIAL NOT NULL,
    "nome" VARCHAR NOT NULL,
    "descricao" VARCHAR NOT NULL,
    PRIMARY KEY("id_tarefas")
);

CREATE TABLE pessoas(
    "id_pessoas" SERIAL NOT NULL,
    "nome" VARCHAR NOT NULL,
    "profissao" VARCHAR NOT NULL,
    "id_equipes" INT NOT NULL,
    "id_tarefas" INT NOT NULL,
    PRIMARY KEY("id_pesssoas"),
    FOREIGN KEY ("id_equipes") REFERENCES equipes("id_equipes"),
    FOREIGN KEY ("id_tarefas") REFERENCES tarefas("id_tarefas")
    
);

